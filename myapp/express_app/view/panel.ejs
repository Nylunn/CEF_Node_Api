        }
        a {
            display: inline-block;
            background-color: #5c9ead;
            color: white;
            text-decoration: none;
            padding: 10px 15px;
            margin: 10px 0;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }
        a:hover {
            background-color: #4a7e8c;
        }
